@code {
    private string alertMessage = "";
    private string alertType = "info";
    
    private List<AgentSession> allSessions = new();
    private List<AgentSession> activeSessions = new();
    private int? selectedSessionId = null;
    private AgentSession? selectedSession => selectedSessionId.HasValue 
        ? allSessions.FirstOrDefault(s => s.Id == selectedSessionId.Value)
        : null;
    
    private HashSet<int> expandedCodes = new();
    private HashSet<int> expandedResults = new();
    private HashSet<int> expandedChats = new();
    
    private System.Threading.Timer? refreshTimer;
    
    protected override void OnInitialized()
    {
        RefreshSessions();
        
        // Auto-refresh every 2 seconds
        refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(() =>
            {
                RefreshSessions();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(2), TimeSpan.FromSeconds(2));
    }
    
    private void RefreshSessions()
    {
        try
        {
            activeSessions = AgenticService.GetActiveSessions();
            allSessions = AgenticService.GetAllSessions();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to refresh agentic sessions");
        }
    }
    
    private void SelectSession(int sessionId)
    {
        if (selectedSessionId == sessionId)
        {
            selectedSessionId = null;
        }
        else
        {
            selectedSessionId = sessionId;
            expandedCodes.Clear();
            expandedResults.Clear();
            expandedChats.Clear();
            
            // Refresh the selected session to get latest data
            var session = AgenticService.GetSession(sessionId);
            if (session != null)
            {
                var index = allSessions.FindIndex(s => s.Id == session.Id);
                if (index >= 0)
                {
                    allSessions[index] = session;
                }
            }
        }
    }
    
    private void ToggleCodeExpand(int stepNumber)
    {
        if (expandedCodes.Contains(stepNumber))
            expandedCodes.Remove(stepNumber);
        else
            expandedCodes.Add(stepNumber);
    }
    
    private void ToggleResultExpand(int stepNumber)
    {
        if (expandedResults.Contains(stepNumber))
            expandedResults.Remove(stepNumber);
        else
            expandedResults.Add(stepNumber);
    }
    
    private void ToggleChatExpand(int index)
    {
        if (expandedChats.Contains(index))
            expandedChats.Remove(index);
        else
            expandedChats.Add(index);
    }
    
    private string GetSessionStatusClass(AgentSession session)
    {
        if (!session.IsComplete) return "active";
        return session.WasSuccessful ? "complete" : "failed";
    }
    
    private string GetPhaseClass(AgentPhase phase)
    {
        return phase switch
        {
            AgentPhase.Preparing => "phase-preparing",
            AgentPhase.Generating => "phase-generating",
            AgentPhase.Testing => "phase-testing",
            AgentPhase.Fixing => "phase-fixing",
            AgentPhase.Complete => "phase-complete",
            AgentPhase.Failed => "phase-failed",
            _ => ""
        };
    }
    
    private string GetStepPhaseClass(string phase)
    {
        return phase.ToLower() switch
        {
            "prepare" => "prepare",
            "generate" => "generate",
            "fix" => "fix",
            "test" => "test",
            _ => ""
        };
    }
    
    private string TruncateText(string? text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return "";
        return text.Length > maxLength ? text[..maxLength] + "..." : text;
    }
    
    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}
