@inject AgenticGameService AgenticService
@inject ILogger<AgenticDebugContent> Logger
@implements IDisposable

<div id="alerts">
    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <div class="alert alert-@alertType">@alertMessage</div>
    }
</div>

<!-- Active Sessions Overview -->
<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
        <h2>ü§ñ Agentic Sessions</h2>
        <div style="display: flex; gap: 10px; align-items: center;">
            <span style="color: var(--text-dim); font-size: 14px;">
                Active: @activeSessions.Count | Total: @allSessions.Count
            </span>
            <button @onclick="RefreshSessions" class="btn-small btn-info">üîÑ Refresh</button>
        </div>
    </div>
    
    @if (!allSessions.Any())
    {
        <div class="empty-state">
            <p>No agentic sessions yet.</p>
            <p style="color: var(--text-dim); font-size: 14px;">Sessions will appear here when you use Interactive Mode from the Commands tab.</p>
        </div>
    }
    else
    {
        <div class="session-list">
            @foreach (var session in allSessions.OrderByDescending(s => s.CreatedAt))
            {
                <div class="session-item @(selectedSessionId == session.Id ? "selected" : "") @GetSessionStatusClass(session)" 
                     @onclick="() => SelectSession(session.Id)">
                    <div class="session-header">
                        <span class="session-id">#@session.Id</span>
                        <span class="session-mode">@session.Mode</span>
                        <span class="session-phase @GetPhaseClass(session.CurrentPhase)">@session.CurrentPhase</span>
                    </div>
                    <div class="session-prompt">@TruncateText(session.UserPrompt, 80)</div>
                    <div class="session-meta">
                        <span>@session.Author</span>
                        <span>@session.CreatedAt.ToLocalTime().ToString("HH:mm:ss")</span>
                        <span>@session.Steps.Count steps</span>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Selected Session Detail -->
@if (selectedSession != null)
{
    <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 15px;">
            <div>
                <h2>üìù Session #@selectedSession.Id Detail</h2>
                <div style="color: var(--text-dim); font-size: 14px;">
                    Mode: @selectedSession.Mode | 
                    Phase: <span class="@GetPhaseClass(selectedSession.CurrentPhase)">@selectedSession.CurrentPhase</span> |
                    Iterations: @selectedSession.CurrentIteration/@selectedSession.MaxIterations
                </div>
            </div>
            <button @onclick="() => selectedSessionId = null" class="btn-small">‚úï Close</button>
        </div>
        
        <!-- User Prompt -->
        <div class="conversation-section">
            <div class="section-header">üì£ User Prompt</div>
            <div class="message user-message">
                <div class="message-author">@selectedSession.Author (@selectedSession.Source)</div>
                <div class="message-content">@selectedSession.UserPrompt</div>
                <div class="message-time">@selectedSession.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
            </div>
        </div>
        
        <!-- Chat API Messages (Raw) -->
        <div class="conversation-section">
            <div class="section-header">üí¨ Chat API Messages (@selectedSession.ChatHistory.Count)</div>
            
            @if (!selectedSession.ChatHistory.Any())
            {
                <div class="empty-state">No chat messages recorded yet.</div>
            }
            else
            {
                <div class="chat-messages">
                    @foreach (var (message, index) in selectedSession.ChatHistory.Select((m, i) => (m, i)))
                    {
                        <div class="chat-message @message.Role">
                            <div class="message-role">
                                @if (message.Role == "system")
                                {
                                    <span class="role-badge system">üîß System</span>
                                }
                                else if (message.Role == "user")
                                {
                                    <span class="role-badge user">üë§ User</span>
                                }
                                else if (message.Role == "assistant")
                                {
                                    <span class="role-badge assistant">ü§ñ Assistant</span>
                                }
                                <button @onclick="() => ToggleChatExpand(index)" class="btn-tiny">
                                    @(expandedChats.Contains(index) ? "‚ñº Collapse" : "‚ñ∂ Expand")
                                </button>
                            </div>
                            @if (expandedChats.Contains(index))
                            {
                                <pre class="message-content-full">@message.Content</pre>
                            }
                            else
                            {
                                <pre class="message-content-preview">@TruncateText(message.Content, 200)</pre>
                            }
                        </div>
                    }
                </div>
            }
        </div>
        
        <!-- Steps / Parsed Conversation -->
        <div class="conversation-section">
            <div class="section-header">üí¨ Conversation Steps (@selectedSession.Steps.Count)</div>
            
            @if (!selectedSession.Steps.Any())
            {
                <div class="empty-state">No steps recorded yet.</div>
            }
            else
            {
                @foreach (var step in selectedSession.Steps)
                {
                    <div class="step-container @(step.Success == true ? "success" : step.Success == false ? "failure" : "pending")">
                        <div class="step-header">
                            <span class="step-number">Step @step.StepNumber</span>
                            <span class="step-phase @GetStepPhaseClass(step.Phase)">@step.Phase</span>
                            <span class="step-status">
                                @if (step.Success == true)
                                {
                                    <span style="color: var(--success);">‚úì Success</span>
                                }
                                else if (step.Success == false)
                                {
                                    <span style="color: var(--error);">‚úó Failed</span>
                                }
                                else
                                {
                                    <span style="color: var(--warning);">‚è≥ Pending</span>
                                }
                            </span>
                            <span class="step-time">@step.Timestamp.ToLocalTime().ToString("HH:mm:ss")</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(step.AiThinking))
                        {
                            <div class="step-thinking">
                                <strong>üß† AI Thinking:</strong>
                                <div>@step.AiThinking</div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(step.Code))
                        {
                            <div class="step-code">
                                <div class="code-header">
                                    <strong>üíª Code</strong>
                                    <button @onclick="() => ToggleCodeExpand(step.StepNumber)" class="btn-tiny">
                                        @(expandedCodes.Contains(step.StepNumber) ? "‚ñº Collapse" : "‚ñ∂ Expand")
                                    </button>
                                </div>
                                @if (expandedCodes.Contains(step.StepNumber))
                                {
                                    <pre class="code-block">@step.Code</pre>
                                }
                                else
                                {
                                    <pre class="code-preview">@TruncateText(step.Code, 150)</pre>
                                }
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(step.ResultData))
                        {
                            <div class="step-result">
                                <div class="result-header">
                                    <strong>üìä Result Data</strong>
                                    <button @onclick="() => ToggleResultExpand(step.StepNumber)" class="btn-tiny">
                                        @(expandedResults.Contains(step.StepNumber) ? "‚ñº Collapse" : "‚ñ∂ Expand")
                                    </button>
                                </div>
                                @if (expandedResults.Contains(step.StepNumber))
                                {
                                    <pre class="result-block">@step.ResultData</pre>
                                }
                                else
                                {
                                    <pre class="result-preview">@TruncateText(step.ResultData, 200)</pre>
                                }
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(step.Error))
                        {
                            <div class="step-error">
                                <strong>‚ùå Error:</strong>
                                <pre>@step.Error</pre>
                            </div>
                        }
                    </div>
                }
            }
        </div>
        
        <!-- Final Output -->
        @if (selectedSession.IsComplete)
        {
            <div class="conversation-section">
                <div class="section-header">
                    @if (selectedSession.WasSuccessful)
                    {
                        <span>‚úÖ Final Output</span>
                    }
                    else
                    {
                        <span>‚ùå Session Failed</span>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(selectedSession.FinalExecutionCode))
                {
                    <div class="final-code">
                        <strong>Final Execution Code:</strong>
                        <pre class="code-block">@selectedSession.FinalExecutionCode</pre>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(selectedSession.FinalUndoCode))
                {
                    <div class="final-code">
                        <strong>Undo Code:</strong>
                        <pre class="code-block">@selectedSession.FinalUndoCode</pre>
                    </div>
                }
                
                @if (selectedSession.CompletedAt.HasValue)
                {
                    <div style="color: var(--text-dim); font-size: 12px; margin-top: 10px;">
                        Completed at: @selectedSession.CompletedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                        (Duration: @((selectedSession.CompletedAt.Value - selectedSession.CreatedAt).TotalSeconds.ToString("F1"))s)
                    </div>
                }
            </div>
        }
    </div>
}

