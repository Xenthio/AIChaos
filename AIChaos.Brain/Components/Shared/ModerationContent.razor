@code {
    private string activeTab = "images";
    private string alertMessage = "";
    private string alertType = "info";
    private List<PendingPromptEntry>? pendingImages;
    private List<PendingCodeEntry>? pendingCode;
    private List<RefundRequest>? pendingRefunds;
    private int pendingImageCount => pendingImages?.Count ?? 0;
    private int pendingCodeCount => pendingCode?.Count ?? 0;
    private int pendingRefundCount => pendingRefunds?.Count ?? 0;
    private bool autoRefresh = false;
    private System.Threading.Timer? refreshTimer;

    protected override void OnInitialized()
    {
        LoadPendingImages();
        LoadPendingCode();
        LoadPendingRefunds();
        
        // Subscribe to events for real-time updates
        ModerationService.PendingPromptsChanged += OnPendingPromptsChanged;
        CodeModerationService.PendingCodeChanged += OnPendingCodeChanged;
        CommandQueue.HistoryChanged += OnHistoryChanged;
    }

    private async void OnPendingPromptsChanged(object? sender, EventArgs e)
    {
        await InvokeAsync(() =>
        {
            LoadPendingImages();
            StateHasChanged();
        });
    }

    private async void OnPendingCodeChanged(object? sender, EventArgs e)
    {
        await InvokeAsync(() =>
        {
            LoadPendingCode();
            StateHasChanged();
        });
    }

    private async void OnHistoryChanged(object? sender, EventArgs e)
    {
        // Reload in case we need to update command statuses
        await InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }

    private void LoadPendingImages()
    {
        try
        {
            pendingImages = ModerationService.GetPendingPrompts();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load pending images failed: {ex.Message}");
            ShowAlert("Failed to load pending images", "error");
        }
    }

    private void LoadPendingCode()
    {
        try
        {
            pendingCode = CodeModerationService.GetPendingCode();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load pending code failed: {ex.Message}");
            ShowAlert("Failed to load pending code", "error");
        }
    }

    private void LoadPendingRefunds()
    {
        try
        {
            pendingRefunds = RefundService.GetPendingRequests();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load pending refunds failed: {ex.Message}");
            ShowAlert("Failed to load pending refunds", "error");
        }
    }

    private void ToggleAutoRefresh()
    {
        if (autoRefresh)
        {
            refreshTimer = new System.Threading.Timer(_ =>
            {
                InvokeAsync(() =>
                {
                    LoadPendingImages();
                    LoadPendingCode();
                    LoadPendingRefunds();
                });
            }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
        }
        else
        {
            refreshTimer?.Dispose();
            refreshTimer = null;
        }
    }

    private async Task ApproveImage(int imageId)
    {
        try
        {
            // Null checks for injected services
            if (CodeGenerator == null)
            {
                ShowAlert("Error: Code generator service not available", "error");
                return;
            }
            
            if (CommandQueue == null)
            {
                ShowAlert("Error: Command queue service not available", "error");
                return;
            }
            
            if (TestClientService == null)
            {
                ShowAlert("Error: Test client service not available", "error");
                return;
            }
            
            var entry = ModerationService.ApprovePrompt(imageId);
            if (entry == null)
            {
                ShowAlert("Failed to approve image - image not found", "error");
                return;
            }
            
            // Generate code with image context
            var (executionCode, undoCode, needsModeration, moderationReason) = await CodeGenerator.GenerateCodeAsync(
                entry.UserPrompt,
                imageContext: $"Image URL: {entry.ContentUrl}");
            
            // Check if we have a linked command to update
            if (entry.CommandId.HasValue)
            {
                // Update the existing placeholder command
                var command = CommandQueue.GetCommand(entry.CommandId.Value);
                if (command != null)
                {
                    command.ExecutionCode = executionCode;
                    command.UndoCode = undoCode;
                    command.ImageContext = entry.ContentUrl;
                    command.Status = CommandStatus.Queued;
                    command.AiResponse = null; // Clear the pending message

                    // Check if test client mode is enabled
                    var isTestClientModeEnabled = TestClientService.IsEnabled;
                    
                    // Queue for execution
                    if (isTestClientModeEnabled)
                    {
                        TestClientService.QueueForTesting(command.Id, executionCode, entry.UserPrompt);
                        Console.WriteLine($"[MODERATION] Approved image command #{command.Id} queued for testing");
                    }
                    else
                    {
                        CommandQueue.QueueInteractiveCode(command.Id, executionCode);
                        Console.WriteLine($"[MODERATION] Approved image command #{command.Id} queued for execution");
                    }
                    
                    ShowAlert($"Image approved! Command #{command.Id} is now queued for execution.", "success");
                    LoadPendingImages();
                    return;
                }
            }
            
            // Fallback: No linked command (old behavior for backward compatibility)
            ShowAlert("Image approved but no linked command found - this shouldn't happen for new submissions", "warning");
            LoadPendingImages();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Approve image failed: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            ShowAlert($"Error approving image: {ex.Message}", "error");
        }
    }

    private void DenyImage(int imageId)
    {
        try
        {
            var entry = ModerationService.DenyPrompt(imageId);
            if (entry != null)
            {
                // Refund credits if there's a linked command
                if (entry.CommandId.HasValue && !string.IsNullOrEmpty(entry.UserId))
                {
                    AccountService.AddCredits(entry.UserId, Constants.CommandCost);
                    
                    // Update the command status to Failed
                    var command = CommandQueue.GetCommand(entry.CommandId.Value);
                    if (command != null)
                    {
                        command.Status = CommandStatus.Failed;
                        command.ErrorMessage = "Image denied by moderator";
                        command.AiResponse = "‚ùå Your image was denied by a moderator. Credits have been refunded.";
                    }
                    
                    ShowAlert($"Image denied and ${Constants.CommandCost:F2} refunded", "success");
                }
                else
                {
                    ShowAlert("Image denied", "success");
                }
                
                LoadPendingImages();
            }
            else
            {
                ShowAlert("Failed to deny image", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Deny image failed: {ex.Message}");
            ShowAlert("Error denying image", "error");
        }
    }

    private async Task ApproveCode(int codeId)
    {
        try
        {
            var entry = CodeModerationService.ApproveCode(codeId);
            if (entry == null)
            {
                ShowAlert("Failed to approve code - code not found", "error");
                return;
            }

            // Update the linked command if it exists
            if (entry.CommandId.HasValue)
            {
                var command = CommandQueue.GetCommand(entry.CommandId.Value);
                if (command != null)
                {
                    command.ExecutionCode = entry.ExecutionCode;
                    command.UndoCode = entry.UndoCode;
                    command.Status = CommandStatus.Queued;
                    command.AiResponse = null;

                    // Queue for execution
                    if (TestClientService.IsEnabled)
                    {
                        TestClientService.QueueForTesting(command.Id, entry.ExecutionCode, entry.UserPrompt);
                        ShowAlert($"Code approved! Command #{command.Id} queued for testing.", "success");
                    }
                    else
                    {
                        CommandQueue.QueueInteractiveCode(command.Id, entry.ExecutionCode);
                        ShowAlert($"Code approved! Command #{command.Id} queued for execution.", "success");
                    }
                }
            }
            else
            {
                ShowAlert("Code approved but no linked command found", "warning");
            }

            LoadPendingCode();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Approve code failed: {ex.Message}");
            ShowAlert($"Error approving code: {ex.Message}", "error");
        }
    }

    private void DenyCode(int codeId)
    {
        try
        {
            var entry = CodeModerationService.DenyCode(codeId);
            if (entry != null)
            {
                // Refund credits if there's a linked command
                if (entry.CommandId.HasValue && !string.IsNullOrEmpty(entry.UserId))
                {
                    AccountService.AddCredits(entry.UserId, Constants.CommandCost);
                    
                    // Update the command status to Failed
                    var command = CommandQueue.GetCommand(entry.CommandId.Value);
                    if (command != null)
                    {
                        command.Status = CommandStatus.Failed;
                        command.ErrorMessage = "Code denied by moderator: " + entry.FilterReason;
                        command.AiResponse = $"‚ùå Your code was denied by a moderator. Reason: {entry.FilterReason}. Credits have been refunded.";
                    }
                    
                    ShowAlert($"Code denied and ${Constants.CommandCost:F2} refunded", "success");
                }
                else
                {
                    ShowAlert("Code denied", "success");
                }
                
                LoadPendingCode();
            }
            else
            {
                ShowAlert("Failed to deny code", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Deny code failed: {ex.Message}");
            ShowAlert("Error denying code", "error");
        }
    }

    private void ApproveRefund(string refundId)
    {
        try
        {
            var result = RefundService.ApproveRefund(refundId);
            if (result)
            {
                ShowAlert("Refund approved and credits returned!", "success");
                LoadPendingRefunds();
            }
            else
            {
                ShowAlert("Failed to approve refund", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Approve refund failed: {ex.Message}");
            ShowAlert("Error approving refund", "error");
        }
    }

    private void DenyRefund(string refundId)
    {
        try
        {
            var result = RefundService.RejectRefund(refundId);
            if (result)
            {
                ShowAlert("Refund request denied", "success");
                LoadPendingRefunds();
            }
            else
            {
                ShowAlert("Failed to deny refund", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Deny refund failed: {ex.Message}");
            ShowAlert("Error denying refund", "error");
        }
    }

    private void ShowAlert(string message, string type)
    {
        alertMessage = message;
        alertType = type;
        StateHasChanged();
        
        _ = Task.Run(async () =>
        {
            await Task.Delay(Constants.MessageDurations.Short);
            await InvokeAsync(() =>
            {
                alertMessage = "";
                StateHasChanged();
            });
        });
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
        
        // Unsubscribe from events
        ModerationService.PendingPromptsChanged -= OnPendingPromptsChanged;
        CodeModerationService.PendingCodeChanged -= OnPendingCodeChanged;
        CommandQueue.HistoryChanged -= OnHistoryChanged;
    }
}
