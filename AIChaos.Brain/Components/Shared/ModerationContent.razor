@page "/moderation"
@using AIChaos.Brain.Models
@using AIChaos.Brain.Services
@implements IDisposable

@inject PromptModerationService ModerationService
@inject RefundService RefundService
@inject CodeModerationService CodeModerationService
@inject CommandQueueService CommandQueue
@inject AiCodeGeneratorService CodeGenerator
@inject TestClientService TestClientService
@inject AccountService AccountService
@inject IJSRuntime JS

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert alert-@alertType">@alertMessage</div>
}

<div class="tabs">
    <button class="tab-btn @(activeTab == "images" ? "active" : "")" @onclick='() => activeTab = "images"'>
        üñºÔ∏è Images <span class="pending-count">@pendingImageCount</span>
    </button>
    <button class="tab-btn @(activeTab == "code" ? "active" : "")" @onclick='() => activeTab = "code"'>
        ‚ö†Ô∏è Code <span class="pending-count">@pendingCodeCount</span>
    </button>
    <button class="tab-btn @(activeTab == "refunds" ? "active" : "")" @onclick='() => activeTab = "refunds"'>
        üí∞ Refunds <span class="pending-count">@pendingRefundCount</span>
    </button>
</div>

@if (activeTab == "images")
{
    <div class="card">
        <h2>üñºÔ∏è Pending Images</h2>
        <div class="btn-group" style="margin-bottom: 20px;">
            <button @onclick="LoadPendingImages" class="btn-secondary">üîÑ Refresh</button>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="checkbox" @bind="autoRefresh" @bind:after="ToggleAutoRefresh">
                <span style="color: var(--text-dim);">Auto-refresh (5s)</span>
            </label>
        </div>
        <div>
            @if (pendingImages == null || !pendingImages.Any())
            {
                <div class="no-images">‚úÖ No images pending moderation</div>
            }
            else
            {
                @foreach (var img in pendingImages)
                {
                    <div class="image-card">
                        <div class="image-meta">
                            <span><strong>#@img.Id</strong></span>
                            <span>üë§ @img.Author</span>
                        </div>
                        <div class="image-prompt"><strong>Prompt:</strong> @img.UserPrompt</div>
                        <img src="@img.ContentUrl" class="image-preview" alt=@($"Pending image (If you can't see it, embedding might be blocked, please open it in a new tab)")>
                        <div class="action-buttons">
                            <button @onclick="async () => await ApproveImage(img.Id)" class="btn-success">‚úÖ APPROVE</button>
                            <button @onclick="() => DenyImage(img.Id)" class="btn-danger">‚ùå DENY</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

@if (activeTab == "code")
{
    <div class="card">
        <h2>‚ö†Ô∏è Pending Code (Filtered Content)</h2>
        <div class="btn-group" style="margin-bottom: 20px;">
            <button @onclick="LoadPendingCode" class="btn-secondary">üîÑ Refresh</button>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="checkbox" @bind="autoRefresh" @bind:after="ToggleAutoRefresh">
                <span style="color: var(--text-dim);">Auto-refresh (5s)</span>
            </label>
        </div>
        <div>
            @if (pendingCode == null || !pendingCode.Any())
            {
                <div class="no-images">‚úÖ No code pending moderation</div>
            }
            else
            {
                @foreach (var codeEntry in pendingCode)
                {
                    <div class="image-card">
                        <div class="image-meta">
                            <span><strong>#@codeEntry.Id</strong></span>
                            <span>üë§ @codeEntry.Author</span>
                            <span style="color: var(--warning);">‚ö†Ô∏è @codeEntry.FilterReason</span>
                        </div>
                        <div class="image-prompt"><strong>Prompt:</strong> @codeEntry.UserPrompt</div>
                        <details style="margin-bottom: 10px;">
                            <summary style="cursor: pointer; color: var(--info);">View Execution Code</summary>
                            <pre style="background: rgba(0,0,0,0.3); padding: 10px; border-radius: 4px; overflow-x: auto;"><code>@codeEntry.ExecutionCode</code></pre>
                        </details>
                        <details>
                            <summary style="cursor: pointer; color: var(--info);">View Undo Code</summary>
                            <pre style="background: rgba(0,0,0,0.3); padding: 10px; border-radius: 4px; overflow-x: auto;"><code>@codeEntry.UndoCode</code></pre>
                        </details>
                        <div class="action-buttons" style="margin-top: 10px;">
                            <button @onclick="async () => await ApproveCode(codeEntry.Id)" class="btn-success">‚úÖ APPROVE</button>
                            <button @onclick="() => DenyCode(codeEntry.Id)" class="btn-danger">‚ùå DENY</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

@if (activeTab == "refunds")
{
    <div class="card">
        <h2>üí∞ Pending Refund Requests</h2>
        <div class="btn-group" style="margin-bottom: 20px;">
            <button @onclick="LoadPendingRefunds" class="btn-secondary">üîÑ Refresh</button>
        </div>
        <div>
            @if (pendingRefunds == null || !pendingRefunds.Any())
            {
                <div class="no-images">‚úÖ No refund requests pending</div>
            }
            else
            {
                @foreach (var refund in pendingRefunds)
                {
                    <div class="image-card">
                        <div class="image-meta">
                            <span><strong>#@refund.Id</strong></span>
                            <span>üë§ @refund.UserDisplayName</span>
                            <span>Command #@refund.CommandId</span>
                        </div>
                        <div class="image-prompt"><strong>Reason:</strong> @refund.Reason</div>
                        <div class="image-prompt" style="color: var(--text-dim); font-size: 12px;">
                            Amount: $@refund.Amount.ToString("F2")
                        </div>
                        <div class="action-buttons">
                            <button @onclick="() => ApproveRefund(refund.Id)" class="btn-success">‚úÖ APPROVE & REFUND</button>
                            <button @onclick="() => DenyRefund(refund.Id)" class="btn-danger">‚ùå DENY</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

